<UserControl x:Class="Darts.UserControls.UcWurfanzeigeCricketxaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Darts.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="450">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155*" />

            <ColumnDefinition Width="95*" />
            <ColumnDefinition Width="95*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="73*" />
            <RowDefinition Height="57*" />
        </Grid.RowDefinitions>
        <Label x:Name="LblSpielerName" VerticalAlignment="Top" Content="Spieler" Grid.Column="0" Margin="25,0,25,13" Grid.Row="0" FontSize="25" Height="50" />
        <Button Template="{DynamicResource roundbutton}" x:Name="BtnFertig" Visibility="Hidden" Content="Weiter" Margin="25,15,15,15" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" FontSize="20" />
        <Image x:Name="ImgWuerfe" Grid.Row="1" Grid.Column="2" Source="/Images/0wuerfe.png" Margin="10" />
    </Grid>
</UserControl>
